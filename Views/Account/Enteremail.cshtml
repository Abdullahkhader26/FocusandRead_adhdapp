@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - Enter Email</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            padding-top: 30px;
        }

       

        .container {
            background-color: white;
            width: 90%;
            max-width: 700px;
            display: flex;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
            margin-top:50px;
        }

        .left {
            background-color: #2196F3;
            color: white;
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            flex-direction: column;
            position: relative;
        }

        .left h1 {
            font-size: 36px;
            text-align: center;
        }

        .left .login-text {
            position: absolute;
            top: 20px;
            left: 20px;
            font-size: 18px;
            font-weight: bold;
        }

        .right {
            flex: 2;
            padding: 40px;
        }

        .right h2 {
            margin-bottom: 20px;
            color: #2196F3;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input {
            padding: 12px;
            margin-bottom: 16px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .submit-btn {
            background-color: #2196F3;
            color: white;
            border: none;
            padding: 14px;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #0b7dda;
        }

        .link {
            text-align: center;
            margin-top: 12px;
        }

        .link a {
            color: #2196F3;
            text-decoration: none;
        }

        .link a:hover {
            text-decoration: underline;
        }

        .social-buttons {
            margin-bottom: 20px;
        }

        .social-buttons button {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            margin-bottom: 10px;
            cursor: pointer;
        }

        .google-btn {
            background-color: #DB4437;
            color: white;
        }

        .apple-btn {
            background-color: #000;
            color: white;
        }

        .site-description {
            text-align: center;
            max-width: 600px;
            font-size: 16px;
            color: #555;
            margin-top: 30px;
            line-height: 1.6;
        }

        .contact {
            text-align: center;
            margin-top: 10px;
        }

        .contact a {
            display: inline-block;
            margin-top: 10px;
            color: #2196F3;
            text-decoration: none;
            font-weight: bold;
        }

        .contact a:hover {
            text-decoration: underline;
        }

        .user-name {
            position: absolute;
            bottom: 20px;
            right: 20px;
            font-size: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    


    <div class="container">
        <div class="left">
            <div class="login-text">Focus & Read</div>
            <h1>Welcome Back</h1>
            <div class="user-name">ADHD spiecialized</div>
        </div>
        <div class="right">
            <h2>Enter your Email</h2>

            <div class="social-buttons">
                <button type="button" class="google-btn" onclick="alert('Google Login Coming Soon')">Continue with Google</button>
                <button type="button" class="apple-btn" onclick="alert('Apple Login Coming Soon')">Continue with Apple</button>
            </div>

            <form asp-action="EnterEmail" asp-controller="Account" method="post">
                <label for="email">Email address</label>
                <input type="email" name="email" placeholder="Enter your email" required />
                <button type="submit" class="submit-btn">Continue</button>
            </form>

            <div class="link">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a></p>
            </div>

            <div class="contact">
                <a href="/Contact">Have a problem ? Contact Us</a>
            </div>
        </div>
    </div>

</body>
</html>